---
layout: null
permalink: /blog/atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <id>{{ site.url }}/blog/</id>
  <link href="{{ site.url }}/blog/" rel="alternate" />
  <link href="{{ site.url }}/blog/atom.xml" rel="self" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <subtitle>{{ site.description | xml_escape }}</subtitle>

  {% assign posts = site.posts | where_exp: 'post', 'post.published != false' %}
  {% for post in posts %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <id>{{ site.url }}{{ post.url }}</id>
    <link href="{{ site.url }}{{ post.url }}" />
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <author>
      <name>{{ post.author | default: site.author.name | xml_escape }}</name>
    </author>
    {% if post.description %}
    <summary>{{ post.description | xml_escape }}</summary>
    {% endif %}
    <content type="html"><![CDATA[
{{ post.content | markdownify }}
    ]]></content>
  </entry>
  {% endfor %}
</feed>


